	"prisma": {
		"seed": "tsx prisma/seeds/index.ts"
	},
	"jest": {
		"moduleFileExtensions": [
			"js",
			"json",
			"ts"
		],
		"rootDir": ".",
		"testRegex": ".*\\.spec\\.ts$",
		"transform": {
			"^.+\\.(t|j)s$": "ts-jest"
		},
		"collectCoverageFrom": [
			"**/*.(t|j)s"
		],
		"coverageDirectory": "./coverage",
		"testEnvironment": "node",
		"roots": [
			"<rootDir>/apps/",
			"<rootDir>/libs/"
		],
		"moduleNameMapper": {
			"^@config/app-cache(|/.*)$": "<rootDir>/libs/app-cache/src/$1",
			"^@config/app-config(|/.*)$": "<rootDir>/libs/app-config/src/$1",
			"^@database/prisma(|/.*)$": "<rootDir>/libs/prisma/src/$1",
			"^@firebase/firebase(|/.*)$": "<rootDir>/libs/firebase/src/$1",
			"^@s3storage/s3storage(|/.*)$": "<rootDir>/libs/s3storage/src/$1"
		}
	}
