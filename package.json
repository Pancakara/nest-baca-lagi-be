	"scripts": {
		"build": "nest build",
		"format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
		"start": "nest start",
		"dev": "nest start --watch",
		"debug": "nest start --debug --watch",
		"prod": "node dist/apps/api/main",
		"lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:cov": "jest --coverage",
		"test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
		"test:e2e": "jest --config ./apps/nest-baca-lagi-be/test/jest-e2e.json",
		"db:migrate": "yarn prisma migrate dev --schema prisma/schemas",
		"db:migrate:prod": "yarn prisma migrate deploy --schema prisma/schemas",
		"db:generate": "yarn prisma generate --schema prisma/schemas",
		"db:reset": "yarn prisma migrate reset --schema prisma/schemas",
		"db:seed": "cross-env NODE_ENV=dev yarn prisma db seed",
		"db:seed:prod": "cross-env NODE_ENV=production yarn prisma db seed",
		"db:studio": "yarn prisma studio --schema prisma/schemas",
		"prepare": "husky"
	},
